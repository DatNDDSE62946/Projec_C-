<link rel="stylesheet" type="text/css" href="~/Content/styles/cart.css">
<link rel="stylesheet" type="text/css" href="~/Content/styles/cart_responsive.css">




<div class="super_container">

    <!-- Home -->

    <div class="home">
        <div class="home_container">
            <div class="home_background" style="background-image:url(/Content/images/cart.jpg)"></div>
            <div class="home_content_container">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="home_content">
                                <div class="breadcrumbs">
                                    <ul>
                                        <li><a href="index.html">Home</a></li>
                                        <li>Transaction History</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cart Info -->

    <div class="cart_info">
        <div class="container">
            <div class="row">
                <div class="col">
                    <!-- Column Titles -->
                    <div class="cart_info_columns clearfix">
                        <div class="cart_info_col cart_info_col_product">Order ID</div>
                        <div class="cart_info_col cart_info_col_price">Date</div>
                        <div class="cart_info_col cart_info_col_quantity">-</div>
                        <div class="cart_info_col cart_info_col_total">Status</div>
                    </div>
                </div>
            </div>
            <div class="row cart_items_row">
                <div class="col">
                    @foreach (var order in Model)
                    {
                        <!-- Cart Item -->
                        <div class="cart_item d-flex flex-lg-row flex-column align-items-lg-center align-items-start justify-content-start">
                            <!-- ID -->
                            <div class="cart_item_product d-flex flex-row align-items-center justify-content-start">
                                <div class="cart_item_image">
                                    <div><img src="~/Content/images/cart.png" alt=""></div>
                                </div>
                                <div class="cart_item_name_container">
                                    <div class="cart_item_name"><a href="#" title="Click to see detail">
                                        #@order.id</a>
                                    </div>
                                </div>
                            </div>
                            <!-- Date -->
                            <div class="cart_item_price">@order.date.ToString("dd-MM-yyyy")</div>
                            <!-- Quantity -->
                            <div class="cart_item_quantity">

                            </div>
                            <!-- Status -->
                            <div class="cart_item_total">
                                @if(order.status == 0)
                                {
                                    <p class="text-dark">Pending</p>
                                } else if(order.status == 1)
                                {
                                    <p class="text-success">Success</p>
                                }
                            </div>
                        </div>

                    }



                </div>
            </div>

        </div>
    </div>
</div>
